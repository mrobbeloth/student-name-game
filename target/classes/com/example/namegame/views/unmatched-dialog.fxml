<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.namegame.controller.UnmatchedDialogController"
      styleClass="dialog-pane" spacing="15" prefWidth="700" prefHeight="500">
    
    <padding><Insets topRightBottomLeft="20"/></padding>
    
    <Label text="Unmatched Images" styleClass="dialog-title">
        <font><Font size="20" name="System Bold"/></font>
    </Label>
    
    <Label text="These images could not be automatically matched to a roster entry. Select a name for each or use suggestions." 
           wrapText="true" styleClass="dialog-subtitle"/>
    
    <!-- Table -->
    <TableView fx:id="unmatchedTable" VBox.vgrow="ALWAYS" editable="true">
        <columns>
            <TableColumn fx:id="thumbnailColumn" text="Photo" prefWidth="80" sortable="false"/>
            <TableColumn fx:id="filenameColumn" text="Filename" prefWidth="250"/>
            <TableColumn fx:id="assignColumn" text="Assign to Name" prefWidth="300" editable="true"/>
        </columns>
        <placeholder>
            <Label text="No unmatched images"/>
        </placeholder>
    </TableView>
    
    <!-- Status and Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Label fx:id="statusLabel" text="0 unmatched images"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="assignAllButton" text="Assign All Suggestions (0)" onAction="#assignAllSuggestions"/>
        <Button fx:id="closeButton" text="Close" onAction="#close" styleClass="primary-button"/>
    </HBox>
    
</VBox>
