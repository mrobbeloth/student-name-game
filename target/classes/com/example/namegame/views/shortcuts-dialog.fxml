<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.namegame.controller.ShortcutsDialogController"
      styleClass="dialog-pane" spacing="20" prefWidth="400" prefHeight="350">
    
    <padding><Insets topRightBottomLeft="25"/></padding>
    
    <Label text="Keyboard Shortcuts" styleClass="dialog-title">
        <font><Font size="20" name="System Bold"/></font>
    </Label>
    
    <TableView fx:id="shortcutsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="actionColumn" text="Action" prefWidth="200"/>
            <TableColumn fx:id="shortcutColumn" text="Shortcut" prefWidth="150"/>
        </columns>
    </TableView>
    
</VBox>
